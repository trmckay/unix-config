[bar/top]
enable-ipc = true
width = 100%
height = 56
dpi = 200
background = #1f1f1f
foreground = #eee
line-color = ${self.background}
line-size = 1
padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1
separator = |
font-0 = NotoSansMono Nerd Font:size=9;0
font-1 = NotoSansMono Nerd Font:size=9;2
font-2 = NotoSansMono Nerd Font:size=9;0
font-3 = NotoSansMono Nerd Font:pixelsize=9;1
font-4 = NotoSansMono Nerd Font:size=9;0
modules-left = i3
modules-right = memory cpu temperature filesystem network_loc network_speed power_draw battery date title
wm-restack = i3
tray-position = right
tray-scale = 1.0
tray-background = ${self.background}
tray-maxsize = 64
tray-offset-y = 0
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev
overline-size = 10
overline-color = ${self.background}
underline-size = 2
underline-color = ${self.background}

[module/title]
type = custom/text
content = trevor@inspiron

[module/power_draw]
type = custom/script
exec = /home/trevor/.config/polybar/power.sh
interval = 2

[module/battery]
type = internal/battery
full-at = 98
format-charging = <label-charging>
format-discharging = <label-discharging>
format-full =
label-charging = "BATT: %percentage%%"
label-discharging = "BATT: %percentage%%"

[module/cpu]
type = internal/cpu
interval = 0.5
format = <label>
label = CPU: %percentage%%

[module/date]
type = internal/date
date =  %Y-%m-%d %H:%M:%S
date-alt = %A, %d %B %Y %H:%M:%S

[module/memory]
type = internal/memory
format = <label>
label = MEM: %gb_used% (%percentage_used%%)

[module/network_loc]
type = internal/network
interface = wlp5s0
interval = 1.0
ping-interval = 10
format-connected = <label-connected>
label-connected = NET: %essid% (%local_ip%)
label-disconnected = Disconnected
label-disconnected-foreground = #66

[module/network_speed]
type = internal/network
interface = wlp5s0
interval = 1.0
ping-interval = 10
format-connected = <label-connected>
label-connected = SPEED: down: %downspeed% up: %upspeed%
label-disconnected = Disconnected
label-disconnected-foreground = #66

[module/filesystem]
type = internal/fs
interval = 25
mount-0 = /
mount-1 = /mnt/hdd
label-mounted = %mountpoint%: %used%/%total% (%percentage_used%%)
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = #66

[module/clock]
type = internal/date
interval = 2
date = %%{F#999}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}

[module/temperature]
type = internal/temperature
thermal-zone = 5
warn-temperature = 70
format = <label>
format-warn = <label-warn>
label = %temperature-c%
label-warn = HOT! %temperature-c%
label-warn-foreground = #f00

[module/i3]
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
format = <label-state> <label-mode>
label-mode = %mode%
label-mode-padding = 0
label-mode-background = #e60053
label-focused =  %index%
label-focused-foreground = #ffffff
label-focused-underline = #ffffff
label-focused-padding = 1
label-unfocused = %index%
label-unfocused-padding = 1
label-visible = %index%
label-visible-underline = #ffffff
label-visible-padding = 1
label-urgent = %index%
label-urgent-foreground = #ffffff
label-urgent-background = #ff4040
label-urgent-padding = 1
label-separator = |
label-separator-padding = 0
label-separator-foreground = #ffffff

[module/spotify]
type = custom/script
interval = 1
format-prefix = "Playing: "
format = <label>
exec = python   /home/trevor/.config/polybar/spotify.py  -f '{play_pause} {song} - {artist} - {album}'
format-underline = #1db954

