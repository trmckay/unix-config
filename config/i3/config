# set mod key to super
set $mod Mod4

# common apps
bindsym $mod+w exec firefox
bindsym $mod+m exec thunderbird
bindsym $mod+s exec spotify

# rules for floating
floating_maximum_size 3840 x 2160

# list of apps that should default to floating
for_window [class="feh" instance="feh"] floating enable
for_window [class="mpv"] floating enable

# no borders on firefox
for_window [class="firefox" instance="Navigator"] border none

# pulsemixer popup
bindsym $mod+p exec --no-startup-id "$terminal --title pulsemixer-popup -e pulsemixer"
for_window [title="pulsemixer-popup"] floating enable

# nmtui popup
bindsym $mod+n exec --no-startup-id "$terminal --title nmtui-popup -e nmtui"
for_window [title="nmtui-popup"] floating enable, resize set 1000 1000, move position 0 0

# taskwarrior popup
bindsym $mod+t exec --no-startup-id "$terminal --title task-popup -e vit"
for_window [title="task-popup"] floating enable, resize set 1800 1200, move position 0 0

# ranger popup
bindsym $mod+e exec "$terminal --title ranger-popup -e ranger"
for_window [title="ranger-popup"] fullscreen

# htop popup
bindsym $mod+i exec "$terminal --title htop-popup -e htop"
for_window [title="htop-popup"] fullscreen

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# start a terminal
bindsym $mod+Return exec $terminal

# kill focused window
bindsym $mod+q kill

# drop down shells
bindsym $mod+x exec "/home/trevor/dotfiles/i3/quickterm/i3-quickterm shell"

bindsym $mod+backspace exec "i3lock -i pictures/wallpapers/mt.png"

# start dmenu (a program launcher)
bindsym $mod+space exec dmenu_run -nb '#1e1e1e' -sf '#1e1e1e' -sb '#7cafc2' -nf '#7cafc2'

# split in horizontal orientation
bindsym $mod+Shift+v split h

# split in vertical orientation
bindsym $mod+v split v

# change focus
bindsym $mod+shift+h move left
bindsym $mod+shift+j move down
bindsym $mod+shift+k move up
bindsym $mod+shift+l move right

# move focused window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+shift+f floating toggle

# workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
